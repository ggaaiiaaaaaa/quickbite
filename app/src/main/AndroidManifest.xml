<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickBite"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Firebase Messaging Service -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Splash Activity -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickBite.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activities -->
        <activity
            android:name=".activities.AuthActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.AdminAuthActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activities -->
        <activity
            android:name=".activities.BranchSelectActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- Product Activities -->
        <activity
            android:name=".activities.ProductDetailActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.CustomizeItemActivity"
            android:exported="false"
            android:parentActivityName=".activities.ProductDetailActivity" />

        <!-- Order Activities -->
        <activity
            android:name=".activities.OrderTypeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderHistoryActivity"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ViewProductsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TransactionsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LiveOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MenuManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddEditProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InventoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddEditInventoryItemActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ReportsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SalesReportsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PerformanceAnalyticsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UserManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CustomerAccountsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StaffManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddEditStaffActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SystemSettingsActivity"
            android:exported="false" />

    </application>

</manifest>